<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pavel.kopiyko.absctractadapterexample.MainActivity"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/add_item_1"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="@string/add_type_1"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackground"/>

        <Button
            android:id="@+id/add_item_2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="@string/add_type_2"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackground"/>

        <Button
            android:id="@+id/add_item_3"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="@string/add_type_3"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackground"/>


    </LinearLayout>
</LinearLayout>
